ul.nav.nav-sidebar(ng-controller='navsidebarCont', ng-if='currentUserID!==1')
  h4.sub-header.btn(ng-click='liclick(null)', style='margin-right:5px;margin-bottom:5px;border-bottom:2px solid #ccc') ارسالی    
    span.badge  {{ndata[1] + ndata[3] + ndata[5] + ndata[7]}}
  li(ng-repeat='i in [0,1,2,3]', ng-click='liclick(4+i)', ng-class='active[4+i]')
    a(href='#') {{requestStatus[i]}}  
      span.badge  {{ndata[1+2*i]}}
ul.nav.nav-sidebar(ng-controller='navsidebarCont', ng-if='currentUserID===1')
  h4.sub-header.btn(ng-click='liclick(null)', style='margin-right:5px;margin-bottom:5px;border-bottom:2px solid #ccc') دریافتی  
    span.badge  {{ndata[0] + ndata[2] + ndata[4] + ndata[6]}}
  li(ng-repeat='i in [0,1,2,3]', ng-click='liclick(i)', ng-class='active[i]')
    a(href='#') {{requestStatus[i]}}  
      span.badge  {{ndata[i*2]}}
