doctype html
include head.jade
  title  سیستم مدیریت درخواست انجام کار
  body(ng-app='dashboardApp', ng-controller='navbarCont', ng-cloak)
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          .button.navbar-toggle(type="button", data-toggle="collapse", data-target="#myNavbar")
            .span.icon-bar
            .span.icon-bar
            .span.icon-bar
          a.navbar-brand.hidden-sm.hidden-xs(href='#') سیستم مدیریت درخواست انجام کار 
        .navbar-collapse.collapse.text-center(id="myNavbar")
          if !(user)
            form.navbar-form.navbar-left(role='form', action='/login', method='post')
              .form-group-sm
                .label.label-warning(style='margin-left:5px') #{message}
                input.form-control(type='text', name='username', placeholder='نام کاربری')
                input.form-control(type='password', name='password', placeholder='کلمه عبور')
                button.btn.btn-success(type='submit') ورود 
                    span.glyphicon.glyphicon-log-in
          else
            include topnav.jade
            form.navbar-form.navbar-left
              .btn-group(style='margin-left:5px')
                button.btn.btn-success.btn-xs.dropdown-toggle(type="button", data-toggle="dropdown")
                  span.glyphicon.glyphicon-cog
                  |  تنظیمات 
                  span.caret
                ul.dropdown-menu.pull-right
                  li
                    a(href='/backup')
                      span.glyphicon.glyphicon-import
                      |  دریافت بانک پشتیبان  
                  li
                    a(href='#', data-toggle='modal', data-target='#uploadDataBase')
                      span.glyphicon.glyphicon-export
                      |  نصب بانک پشتیبان     
                  li
                    a(href="#")
                      span.glyphicon.glyphicon-cog
                      |  کاربران 
              a.btn.btn-warning(href='/logout', data-toggle='tooltip', data-placement='bottom', title='خروج') 
                | #{user.username} 
                span.glyphicon.glyphicon-log-out
    if !(user)
      .jumbotron
        .container
          h1 خوش آمدید!
          p
            | این پایگاه اینترنتی به منظور ثبت درخواست انجام کار، پیگیری درخواستهای ثبت شده و تهیه گزارشات مورد نیاز طراحی شده است، جهت ورود به پایگاه ابتدا نام کاربری و کلمه عبور خود را در قسمت بالا وارد نمایید.
    else
      div(ng-init='currentUserFullName=\'#{user.name} #{user.family}\'; currentUserID=#{user.id}; isOwner=#{user.isOwner}')
      include dashboard.jade
    include foot.jade
#uploadDataBase.modal.fade(tabindex='-1')
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          span ×
        h4.modal-title ارسال بانک پشتیبان
      .modal-body
        form#uploadForm(enctype="multipart/form-data", action="/import", method="post")
          .form-group
            input.form-control.btn.btn-info(type="file", name="Requests.sqlite")
          input.btn.btn-primary(type="submit", value="ارسال", name="submit")