.btn-group(ng-controller='navsidebarCont', ng-if='currentUserID!==1')
  .btn.navbar-btn.btn-success(href='#', ng-click='liclick(null)')  
    span.glyphicon.glyphicon-send(style='margin-left: 2px')
    | ارسالی
    span.badge(style='margin-right: 1px')  {{ndata[1] + ndata[3] + ndata[5] + ndata[7]}}
  .btn.navbar-btn(href='#', ng-repeat='i in [0,1,2,3]', ng-click='liclick(4+i)', ng-class='active[4+i]') {{requestStatus[i]}}
    span.badge(style='margin-right: 1px')  {{ndata[1+2*i]}}
.btn-group(ng-controller='navsidebarCont', ng-if='currentUserID===1')
  .btn.navbar-btn.btn-success(href='#', ng-click='liclick(null)')   
    span.glyphicon.glyphicon-envelope(style='margin-left: 2px')
    | دریافتی
    span.badge(style='margin-right: 1px')  {{ndata[0] + ndata[2] + ndata[4] + ndata[6]}}
  .btn.navbar-btn(href='#', ng-repeat='i in [0,1,2,3]', ng-click='liclick(i)', ng-class='active[i]') {{requestStatus[i]}} 
    span.badge(style='margin-right: 1px')  {{ndata[i*2]}}