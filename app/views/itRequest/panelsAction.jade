.panel.panel-warning(ng-hide='hideaction', ng-if='requestLevel>0 && requestLevel<3')
  .panel-heading
    h3.panel-title دستورات
      span.label.label-default.pull-left {{data.id + ' --- ' + data.initdate + ' --- ' + data.user}}
  .panel-body
    .well
      .form-group.col-md-12(ng-if='isOwner')
        - var captions = ['data.user', 'data.actiondate', 'data.actiontime']
        include parts/datetime.jade
        .btn.btn-primary.pull-left(type='button', ng-if='requestLevel===1', ng-click='updatestatus(1)') آغاز کار
          .span.glyphicon.glyphicon-play(aria-hidden='true')
        .btn.btn-success.pull-left(type='button', ng-if='requestLevel===2', ng-click='updatestatus(2)') خاتمه
          .span.glyphicon.glyphicon-ok(aria-hidden='true')
      .input-group
        input.form-control(type='text', placeholder='علت لغو...', ng-model='data.cancelwhy')
        .span.input-group-btn
          .btn.btn-warning(type='button', ng-click='updatestatus(3)') لغو درخواست
            .span.glyphicon.glyphicon-remove(aria-hidden='true')
