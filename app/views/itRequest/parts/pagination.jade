div.pull-right
  .row
    button.btn.btn-default.btn-circle(type='button', data-toggle='tooltip', title='برگشت', ng-click = 'backclick()')
      span.glyphicon.glyphicon-share-alt
  .row 
    button.btn.btn-primary.btn-circle(type='button', data-toggle='tooltip', title='درخواست', ng-click='showprimaryclick()', ng-class=' hideprimary ? "" : "btn-toggle"')
      span.glyphicon.glyphicon-tasks
  .row(ng-hide='requestLevel<2')
    button.btn.btn-success.btn-circle(type='button', data-toggle='tooltip', title='فعالیت های انجام شده', ng-click='showsuccess()', ng-class=' hidesuccess ? "" : "btn-toggle"')
      span.glyphicon.glyphicon-wrench
  .row(ng-show='requestLevel===1 || (requestLevel===2 && isOwner)')
    button.btn.btn-warning.btn-circle(type='button', data-toggle='tooltip', title='دستورات', ng-click='showactionclick()', ng-class=' hideaction ? "" : "btn-toggle"')
      span.glyphicon.glyphicon-exclamation-sign
script.
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });