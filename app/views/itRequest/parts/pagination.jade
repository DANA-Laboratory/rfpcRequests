div.pull-right
  .row
    button.btn.btn-default.btn-circle(type='button', data-toggle='tooltip', title='برگشت', ng-click = 'backclick()')
      span.glyphicon.glyphicon-share-alt
  .row 
    a.btn.btn-primary.btn-circle(data-toggle='tooltip', title='درخواست', href='#primary', ng-class=' hideprimary ? "" : "btn-toggle"')
      span.glyphicon.glyphicon-tasks
  .row(ng-hide='requestLevel<2')
    a.btn.btn-success.btn-circle(data-toggle='tooltip', title='فعالیت های انجام شده', href='#success', ng-class=' hidesuccess ? "" : "btn-toggle"')
      span.glyphicon.glyphicon-wrench
  .row(ng-show='requestLevel===1 || (requestLevel===2 && isOwner)')
    a.btn.btn-warning.btn-circle(data-toggle='tooltip', title='دستورات', href='#action', ng-class=' hideaction ? "" : "btn-toggle"')
      span.glyphicon.glyphicon-exclamation-sign
script.
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });