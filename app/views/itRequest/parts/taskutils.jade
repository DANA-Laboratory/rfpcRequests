a.btn.btn-xs.well-item(ng-click='showTaskConfig===true ? showTaskConfig=false : showTaskConfig=true')
  span.glyphicon.glyphicon-cog
span(ng-show='showTaskConfig')
  button.btn.btn-xs.btn-warning.well-item(data-toggle='modal', data-target='#addTaskModal')
    span.glyphicon.glyphicon-plus
  button.btn.btn-xs.btn-danger.well-item(ng-click='tasksclass="glyphicon-minus"')
    span.glyphicon.glyphicon-minus
  button.btn.btn-xs.btn-danger.well-item(ng-click='tasksclass="glyphicon-pencil"') 
    span.glyphicon.glyphicon-pencil
  button.btn.btn-xs.btn-info.well-item(ng-click='tasksclass="glyphicon-ok"')
    span.glyphicon.glyphicon-ok
include ../../modals/taskEditAdd.jade
