.panel.panel-primary
  .panel-heading
    h3.panel-title فرم درخواست انجام کار واحد خدمات کامپیوتری
  .panel-body
    .row.form-group
      include parts\datetime.jade
    .row.form-group
      include parts\options.jade
    .row
      label.col-md-3.control-label(for='checkboxes') موضوع درخواست
    .well
      include parts\items.jade
    .row.form-group
      label.col-md-2.control-label(for='textarea') توضیحات
      .col-md-8
        textarea#textarea.form-control(name='textarea') 
  .panel-footer  
    if requestLevel==0
      .btn-group.btn-group-justified(role='group', aria-label='...')
        .btn.btn-default(name='buttoncancel') انصراف
          .span.glyphicon.glyphicon-remove(aria-hidden='true') 
        .btn.btn-success(name='buttonok') ثبت درخواست
          .span.glyphicon.glyphicon-ok(aria-hidden='true') 
    case requestLevel
      when 1
        .alert.alert-info(role='alert')
          span.glyphicon.glyphicon-hourglass(aria-hidden='true')
          span.sr-only Error:
          |  ثبت شده
      when 2
        .alert.alert-info(role='alert')
          span.glyphicon.glyphicon-hourglass(aria-hidden='true')
          span.sr-only Error:
          |  در دست اقدام     
      when 3
        .alert.alert-success(role='alert')
          span.glyphicon.glyphicon-ok(aria-hidden='true')
          span.sr-only Error:
          |  خاتمه یافته
      when 4
        .alert.alert-warning(role='alert')
          span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
          span.sr-only Error:
          |  متوقف شده