doctype html
include head.jade
  title فرم درخواست خدمات IT 
  body
    form.form-horizontal
      fieldset
        // Form Name
        legend فرم درخواست انجام کار واحد خدمات کامپیوتری
        // Text input
        .form-group
          .col-md-2
          .col-md-6
            .form-group.row
              label.col-md-4.control-label(for='inputKey') تاریخ 
              .col-md-3
                input#inputKey.form-control(type='text', placeholder='Key')
              label.col-md-1.control-label(for='inputValue') ساعت 
              .col-md-3
                input#inputValue.form-control(type='text', placeholder='Value')
        .form-group
          label.col-md-4.control-label(for='textinput') تاریخ
          .col-md-2
            input#textinput.form-control.input-md(name='textinput', type='text', placeholder='placeholder')
        // Text input
        .form-group
          label.col-md-4.control-label(for='textinput') ساعت
          .col-md-2
            input#textinput.form-control.input-md(name='textinput', type='text', placeholder='placeholder')
        // Select Basic
        .form-group
          label.col-md-4.control-label(for='selectbasic') نام متقاضی
          .col-md-4
            select#selectbasic.form-control(name='selectbasic')
              option(value='1') Option one
              option(value='2') Option two
        // Select Basic
        .form-group
          label.col-md-4.control-label(for='selectbasic') واحد متقاضی
          .col-md-4
            select#selectbasic.form-control(name='selectbasic')
              option(value='1') Option one
              option(value='2') Option two        
        // Select Basic
        .form-group
          label.col-md-4.control-label(for='checkboxes') موضوع درخواست 
          .col-md-4
            label.checkbox-inline(for='checkboxes-0')
              input#checkboxes-0(type='checkbox', name='checkboxes', value='1')
              |       کابل کشی شبکه
            label.checkbox-inline(for='checkboxes-1')
              input#checkboxes-1(type='checkbox', name='checkboxes', value='2')
              |       کند بودن کامپیوتر
            label.checkbox-inline(for='checkboxes-2')
              input#checkboxes-2(type='checkbox', name='checkboxes', value='3')
              |       سیستم یونیت
            label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='4')
              |       روشن خاموش کامپیوتر
            label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='5')
              |       تنظیمات سخت افزاری
             label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='6')
              |       تنظیمات نرم افزاری
             label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='7')
              |       رفع عیب سخت افزار
             label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='8')
              |       رفع عیب نرم افزار
             label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='9')
              |       نصب نرم افزار
             label.checkbox-inline(for='checkboxes-3')
              input#checkboxes-3(type='checkbox', name='checkboxes', value='10')
              |       تعاریف نرم افزار
         // Textarea
        .form-group
          label.col-md-4.control-label(for='textarea') توضیحات
          .col-md-4
            textarea#textarea.form-control(name='textarea') default text
        // Button (Double)
        .form-group
          .col-md-4
          .col-md-3
            button#button1id.btn.btn-success(name='button1id') تایید
            button#button2id.btn.btn-danger(name='button2id') انصراف
